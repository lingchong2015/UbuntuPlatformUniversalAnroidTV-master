<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                               xmlns:app="http://schemas.android.com/apk/res-auto"
                                               android:layout_width="match_parent"
                                               android:layout_height="match_parent"
                                               android:background="@drawable/bg">

    <ImageView
        android:id="@+id/image_view_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="false"
        android:src="@drawable/hks_logo"
        app:layout_heightPercent="60%"
        app:layout_marginBottomPercent="0%"
        app:layout_marginLeftPercent="4%"
        app:layout_marginRightPercent="1%"
        app:layout_marginTopPercent="5%"
        app:layout_widthPercent="30%"/>

    <ImageButton
        android:id="@+id/image_button_play"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/image_view_logo"
        android:background="@drawable/sel_focus"
        android:focusable="true"
        android:scaleType="fitXY"
        android:src="@drawable/play_video"
        app:layout_heightPercent="40%"
        app:layout_marginBottomPercent="1%"
        app:layout_marginLeftPercent="4%"
        app:layout_marginRightPercent="1%"
        app:layout_marginTopPercent="0%"
        app:layout_widthPercent="30%"/>

    <TextView
        android:id="@+id/text_view_director"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_toRightOf="@id/image_view_logo"
        android:text="@string/detail_view_director"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_heightPercent="8%"
        app:layout_marginBottomPercent="15%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="1%"
        app:layout_marginTopPercent="10%"
        app:layout_widthPercent="100%"/>

    <TextView
        android:id="@+id/text_view_actor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/text_view_director"
        android:layout_toRightOf="@id/image_view_logo"
        android:text="@string/detail_view_actor"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_heightPercent="8%"
        app:layout_marginBottomPercent="15%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="1%"
        app:layout_marginTopPercent="1%"
        app:layout_widthPercent="100%"/>

    <TextView
        android:id="@+id/text_view_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/text_view_actor"
        android:layout_toRightOf="@id/image_view_logo"
        android:text="@string/detail_view_content"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:lineSpacingMultiplier="1.2"
        app:layout_heightPercent="30%"
        app:layout_marginBottomPercent="1%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="1%"
        app:layout_marginTopPercent="1%"
        app:layout_widthPercent="100%"/>

    <ImageView
        android:id="@+id/image_view_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_below="@id/text_view_content"
        android:layout_toRightOf="@id/image_button_play"
        android:background="#ffffff"
        app:layout_marginBottomPercent="10%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="1%"
        app:layout_marginTopPercent="5%"
        app:layout_widthPercent="58%"/>

</android.support.percent.PercentRelativeLayout>